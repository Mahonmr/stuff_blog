<div class="container">
  <div class="row">
    <h1>Edit Blog</h1>
    <div class="well">
      <form>
        <div class="form-group">
          <label for="">Title</label>
          <div class="container">
            {{input value=blog.subject id="subject"}}
          </div>
        </div>
        <div class="form-group">
          <label for="">Blog</label>
          <div class="container">
            {{textarea value=blog.content id="content" cols="80" rows="6"}}
          </div>
        </div>
        <div class="form-group">
          <label for="">Add Image</label>
          <div class="container">
            {{input value=blog.image id="image"}}
          </div>
        </div>
        <div class="container">
          <button type="button" class="btn btn-primary" name="button" {{action 'update' blog}}>Update</button>
          <button type="button" class="btn btn-danger" name="button" {{action 'delete' blog}}>Delete</button>
        </div>
      </form>
    </div>
  </div>
</div>
